.section
  padding: 64px 45px
  background-color: $color-white
  margin-bottom: 10px

  +respond-from($large)
    padding: 64px 60px

  +respond-to($medium)
    padding: 45px

  +respond-to($small)
    padding: 45px 20px

  +respond-to($xsmall)
    padding: 30px 12px

.section--upper
  position: relative
  padding-top: 45px
  padding-left: 37px

  +respond-from($large)
    position: relative
    padding: 45px 60px 64px 60px

  +respond-to($medium)
    padding: 45px

  +respond-to($small)
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-between
    padding: 45px 25px

  +respond-to($xsmall)
    justify-content: center
    padding: 25px 12px 42px 12px

    .under-title
      font-size: 15px
      line-height: 28px
      font-weight: 200

.section--wide
  padding-top: 0
  padding-left: 0
  padding-right: 0

.section__title
  font-size: 32px
  line-height: 40px
  margin-bottom: 30px
  color: #103144
  text-align: center
  font-weight: 600

  +respond-to($small)
    margin-bottom: 30px

  +respond-to($xsmall)
    font-size 26px
    line-height: 34px

.section--methodology
  border-radius: 0 0 5px 5px

.section__title--white
  color: #ffffff

.section__title.section__title--table
  margin-bottom: 12px

.section__under-title
  @extend .main-text
  margin: 0 45px
  text-align: center
  margin-bottom: 32px

  +respond-from($large)
    margin: 0 60px 32px 60px

  +respond-to($small)
    margin: 0 25px 32px 25px

  +respond-to($xsmall)
    margin: 0 12px 32px 12px

.section__title--close
  margin-bottom: 12px

.section__under-title--white
  color: #ffffff

.section--tips
  position: relative
  background: #05253b
  color: #ffffff

.section__upper
  position: relative
  width: 100%
  height: 570px
  margin-bottom: 45px

.section__upper-text
  position: absolute
  width: 100%
  top: 45px
  left: 50%
  transform: translate(-50%)
