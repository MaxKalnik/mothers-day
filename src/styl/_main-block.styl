@import "virtual/_mixins.styl"

.main-block
  position: relative
  background-position: center
  background-size: cover
  height: 568px
  padding: 32px 45px
  display: flex
  flex-direction: column
  justify-content: space-between
  box-sizing: border-box
  border-radius: 5px 5px 0 0
  align-items: flex-start
  position: relative
  background-image: url('images/main_pic.png')
  background-image: -webkit-image-set(url(images/main_pic.png) 1x, url(images/main_pic@2x.png) 2x)

  +respond-from($large)
    padding: 32px 60px 34px 60px
    background-position center

  +respond-to($medium)
    height: 568px
    background-image url("images/main_pic_1020.png")
    background-image: -webkit-image-set(url(images/main_pic_1020.png) 1x, url(images/main_pic_1020@2x.png) 2x)
    background-repeat no-repeat
    background-position center
    padding: 32px 45px 45px 25px

  +respond-to($small)
    padding: 32px 25px 42px 25px
    background-image url("images/main_pic_780.png")
    background-image: -webkit-image-set(url(images/main_pic_780.png) 1x, url(images/main_pic_780@2x.png) 2x)
    background-position center

  +respond-to($xsmall)
    height: 454px
    padding: 16px 12px 36px 12px
    background-position right
    background-image url("images/main_pic_320.png")
    background-image: -webkit-image-set(url(images/main_pic_320.png) 1x, url(images/main_pic_320@2x.png) 2x)
    background-position center

.main-block__mask
  position: absolute
  left: 0
  bottom: 0
  width: 100%
  height: 488px
  background-image: linear-gradient(-179deg, rgba(0,0,0,0.00) 2%, rgba(1,4,5,0.21) 35%, #002f05 100%)

  +respond-to($medium)
    background: linear-gradient(-179deg, rgba(0,0,0,0.00) 2%, rgba(1,4,5,0.21) 35%, #002f05 100%)

  +respond-to($small)
    background: linear-gradient(-179deg, rgba(0,0,0,0.00) 2%, rgba(1,4,5,0.21) 35%, #002f05 100%)

  +respond-to($xsmall)
    height: 375px

.main-block__text
  margin-top: auto
  z-index: 2

.main-block__title
  font-family: 'Milkshake'
  color: $color-white
  font-weight: 400
  font-style: normal
  font-size: 64px
  line-height: 78px

  margin-bottom: 12px
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4)

  +respond-from($large)
    margin-bottom: 24px

  +respond-to($medium)
    font-size: 54px
    line-height: 68px
    margin-bottom: 21px

  +respond-to($small)
    font-size: 46px
    line-height: 62px
    margin-bottom: 12px

  +respond-to($xsmall)
    font-size: 30px
    line-height: 46px

.main-block__text-item
  color: $color-white
  font-size: 24px
  line-height: 32px
  font-weight: 300
  margin-bottom: 36px
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4)

  +respond-from($large)
    margin-bottom: 28px

  +respond-to($medium)
    font-size: 24px
    line-height: 30px
    font-weight: 300
    margin-bottom: 46px

  +respond-to($small)
    width: 650px
    font-size: 22px
    line-height: 32px
    font-weight: 300
    margin-bottom: 36px

  +respond-to($xsmall)
    min-width: 265px
    width: auto
    font-size: 16px
    line-height: 24px
    font-weight: 300
    margin-bottom: 12px

.main-block__text-item-mob-hidden
  +respond-to($xsmall)
    display: none

.main-block__text-item-mob-only
  display: none

  +respond-to($xsmall)
    display: inline

.main-block__author
  position: relative
  color: $color-white
  font-size: 12px
  line-height: 16px
  font-weight: 300
  padding-left: 32px
  &:before
    content: ''
    position: absolute
    left: 0
    top: -2px
    width: 20px
    height: 20px
    background-image: url(images/icons/author.svg)
    background-repeat: no-repeat

  +respond-to($medium)
    font-size: 12px
    line-height: 16px
    font-weight: 300

  +respond-to($small)
    font-size: 12px
    line-height: 16px
    font-weight: 300

  +respond-to($xsmall)
    font-size: 12px
    line-height: 16px
    font-weight: 300
